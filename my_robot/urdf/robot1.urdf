<?xml version="1.0"?>
<robot name="single_wheel_robot">

  <!-- World Link (必须显式定义) -->
  <link name="world"/>

  <!-- Base Link: 圆柱形底盘 -->
  <link name="base_link">
    <!-- 视觉模型 -->
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    
    <!-- 碰撞模型 -->
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.2"/>
      </geometry>
    </collision>
    
    <!-- 惯性参数 不要惯性-->
    <inertial>
      <mass value="5"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- 虚拟平面关节 -->
  <joint name="base_joint" type="planar">
    <parent link="world"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- 激光雷达Link -->
  <link name="lidar_link">
    <!-- 视觉模型 -->
    <visual>
      <geometry>
        <cylinder length="0.07" radius="0.03"/> <!-- 小型圆柱体表示雷达 -->
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    
    <!-- 碰撞模型 -->
    <collision>
      <geometry>
        <cylinder length="0.07" radius="0.03"/>
      </geometry>
    </collision>
    
    <!-- 惯性参数 -->
    <inertial>
      <mass value="0.1"/>  <!-- 质量轻 -->
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <!-- 激光雷达关节（固定在底盘上） -->
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/> <!-- 位于底盘中心上方0.1m处 -->
  </joint>

  
  <gazebo>
    <!-- 平面运动控制器 -->
    <plugin name="planar_move_controller" filename="libgazebo_ros_planar_move.so">
      <commandTopic>cmd_vel</commandTopic>       <!-- 速度指令话题 -->
      <odometryTopic>odom</odometryTopic>        <!-- 里程计话题 -->
      <odometryFrame>world</odometryFrame>       <!-- 里程计参考坐标系 -->
      <robotBaseFrame>base_link</robotBaseFrame> <!-- 机器人基准坐标系 -->
      <publishOdom>true</publishOdom>           <!-- 是否发布里程计 -->
    </plugin>
    
    <material>Gazebo/Blue</material>
  </gazebo>



<!-- 3D激光雷达 -->
<gazebo reference="lidar_link">
  <sensor type="ray" name="velodyne_sensor">
    <pose>0 0 0.06 0 0 0</pose>
    <visualize>false</visualize><!-- 改为false，不显示激光线 -->
    <update_rate>10</update_rate>
    <ray>
      <scan>
        <horizontal>
          <samples>360</samples>
          <resolution>1</resolution>
          <min_angle>-3.14159265</min_angle>
          <max_angle>3.14159265</max_angle>
        </horizontal>
        <vertical>
          <samples>16</samples>
          <resolution>1</resolution>
          <min_angle>-0.261799</min_angle> <!-- -15度 -->
          <max_angle>0</max_angle>  <!-- +15度 -->
        </vertical>
      </scan>
      <range>
        <min>0.1</min>
        <max>5.0</max>
        <resolution>0.01</resolution><!-- 激光雷达的距离分辨率，表示测量距离的最小单位（以米为单位） -->
      </range>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.01</stddev>
      </noise>
    </ray>
    <plugin name="velodyne_ros_controller" filename="libgazebo_ros_velodyne_laser.so">
      <topicName>velodyne_points</topicName>
      <frameName>lidar_link</frameName>
      <min_range>0.1</min_range>
      <max_range>5.0</max_range>
      <gaussianNoise>0.008</gaussianNoise>
    </plugin>
  </sensor>
</gazebo>

</robot>